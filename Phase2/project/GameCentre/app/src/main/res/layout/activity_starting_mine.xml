<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_login_gradients">

    <TextView
        android:textColor="@color/lightorangeDark"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Minesweeper              "
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/GameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/StartButton"
        android:layout_width="165dp"
        android:layout_height="85dp"
        android:layout_below="@+id/GameText"
        android:layout_alignStart="@+id/backTwo"
        android:layout_marginStart="127dp"
        android:layout_marginTop="-204dp"
        android:background="@drawable/buttonstyle"
        android:text="Start Game"
        android:textSize="19sp"/>

    <Button
        android:id="@+id/scoreboardButton"
        android:layout_width="157dp"
        android:layout_height="77dp"
        android:layout_below="@+id/GameText"
        android:layout_alignStart="@+id/SaveButton"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="106dp"
        android:background="@drawable/buttonstyle"
        android:text="SCOREBOARD"
        android:textSize="19sp"/>

    <Button
        android:id="@+id/Signout"
        android:layout_width="158dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="586dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/buttonstyle"
        android:text="Signout"
        android:textSize="19sp"/>

    <Button
        android:id="@+id/SETTING"
        android:layout_width="170dp"
        android:layout_height="93dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="137dp"
        android:layout_marginTop="274dp"
        android:layout_marginEnd="111dp"
        android:background="@drawable/buttonstyle"
        android:text="Setting"
        android:textSize="19sp"/>

    <Button
        android:id="@+id/backTwo"
        android:layout_width="147dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="586dp"
        android:layout_marginEnd="7dp"
        android:layout_toStartOf="@+id/scoreboardButton"
        android:background="@drawable/buttonstyle"
        android:text="Back"
        android:textSize="19sp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_marginStart="-28dp"
        android:layout_toEndOf="@+id/StartButton"
        app:srcCompat="@drawable/bomb_start" />

</RelativeLayout>