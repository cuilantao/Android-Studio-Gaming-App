<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_login_gradients">


    <Button
        android:id="@+id/EXIT"
        android:layout_width="132dp"
        android:layout_height="74dp"
        android:background="@drawable/buttonstyle"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.856"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.921" />

    <Button
        android:id="@+id/EASY"
        android:layout_width="132dp"
        android:layout_height="74dp"
        android:background="@drawable/buttonstyle"
        android:text="EASY"
        app:layout_constraintBottom_toTopOf="@+id/MEDIUM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MEDIUM"
        android:layout_width="132dp"
        android:layout_height="74dp"
        android:background="@drawable/buttonstyle"
        android:text="MEDIUM"
        app:layout_constraintBottom_toTopOf="@+id/HARD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EASY" />

    <Button
        android:id="@+id/HARD"
        android:layout_width="132dp"
        android:layout_height="74dp"
        android:background="@drawable/buttonstyle"
        android:text="HARD"
        app:layout_constraintBottom_toTopOf="@+id/EXIT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MEDIUM" />

    " />

</android.support.constraint.ConstraintLayout>